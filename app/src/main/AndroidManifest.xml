<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adetech.garedprintsreminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:launchMode="singleTop"
            android:name=".ui.OrderActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:parentActivityName=".ui.OrderActivity"
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>

        <activity
            android:name=".ui.history.OrderHistoryActivity"
            android:label="@string/history"
            android:parentActivityName=".ui.history.OrderHistoryActivity"></activity>

        <activity
            android:name=".ui.add.AddOrderActivity"
            android:parentActivityName=".ui.OrderActivity" />
    </application>

</manifest>